    <TextView
        android:id="@+id/update_time_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/left_spuare"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="수정시간"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/update_time_num_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_time_text_view"
        android:gravity="center"
        android:text="0000.00.00"
        android:textColor="#000000"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/news_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pharmacy_button"
        android:layout_marginBottom="0dp"
        android:src="@drawable/news_button"
        android:text="뉴스" />

    <ImageView
        android:id="@+id/pharmacy_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22dp"
        android:src="@drawable/parmarcy_button"
        android:text="약국"
        tools:ignore="MissingConstraints" />
</RelativeLayout>

